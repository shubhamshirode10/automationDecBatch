package POM_CLASS;

import java.io.IOException;

import org.apache.poi.EncryptedDocumentException;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import AAuto_Configure.Configurations;

public class Auto_TC {

	public static void main(String[] args) throws InterruptedException, EncryptedDocumentException, IOException {
		Utility util = new Utility();
		WebDriver driver = util.initDriver();

		Auto_Pom_Class signup = new Auto_Pom_Class(driver);
		

		// TC-01
		signup.enterUserName(util.readExceldata(2, 2));
		signup.enterLastName(util.readExceldata(3, 2));
		signup.entermobileno(util.readExceldata(4, 2));
		signup.enterPassword(util.readExceldata(5, 2));
		signup.selectGender();
		signup.selectDay(27); // selectBy Index
		signup.selectMonth(util.readExceldata(6, 2));// selectBy Visible Text
		signup.selectYear("1994");// selectBy Value

		Thread.sleep(5000);

		// TC-02
		driver.get("https://www.facebook.com/signup");
		signup.enterUserName(util.readExceldata(2, 3));
		signup.enterLastName(util.readExceldata(3, 3));
		signup.entermobileno(util.readExceldata(4, 3));
		signup.enterPassword(util.readExceldata(5, 3));
		signup.selectGender();
		signup.selectDay(7); // selectBy Index
		signup.selectMonth(util.readExceldata(6, 3));// selectBy Visible Text
		signup.selectYear("2001");// selectBy Value

		// TC_03
Thread.sleep(5000);
		driver.get("https://www.facebook.com/signup");
		signup.enterUserName(util.readExceldata(2, 4));
		signup.enterLastName(util.readExceldata(3, 4));
		signup.entermobileno(util.readExceldata(4, 4));
		signup.enterPassword(util.readExceldata(5, 4));
		signup.selectGender();
		signup.selectDay(2); // selectBy Index
		signup.selectMonth(util.readExceldata(6, 4));// selectBy Visible Text
		signup.selectYear("1965");// selectBy Value
	}

}
